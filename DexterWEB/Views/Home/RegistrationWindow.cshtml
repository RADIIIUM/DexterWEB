    <form method="post" id="avatarform" asp-controller="Users" asp-action="UploadAvatar" enctype="multipart/form-data">
    <div class="column">
            <p> Аватар </p>
            <div class="roundimage">
                @if (ViewBag.Image != null)
                {
                    <img id="Avatar" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" height="180" width="180" onclick="OpenFileExploder()" />
                }
                else
                {
                    <img id="Avatar" src="~/other/images/StandartProfile.png" height="180" width="180" onclick="OpenFileExploder()" />
                }
                <input type="file" id="fileLoader" name="files" title="Load File" accept="image/jpeg,image/png" />
            </div>
    </div>
        </form>
    <form method="post" id="regform" asp-controller="Users" asp-action="CreateUser">
        <div class="column">
        <div class="input-field col s3">
            <input name="Login" type="text" class="validate WhiteStandartTextColor ">
            <label class="active" for="Login">Логин</label>
            <span class="helper-text" data-error="Ошибка!" data-success=""></span>
        </div>
        <div class="input-field col s6">
            <input name="Password" type="password" class="validate WhiteStandartTextColor ">
            <label class="active" for="Password">Пароль</label>
            <span class="helper-text" data-error="Ошибка!" data-success=""></span>
        </div>

        <div class="input-field col s6">
            <input name="RepPassword" type="password" class="validate WhiteStandartTextColor ">
            <label class="active" for="RepPassword">Введите пароль еще раз</label>
            <span class="helper-text" data-error="Ошибка!" data-success=""></span>
        </div>

        <div class="input-field col s6">
            <input name="Email" type="email" class="validate WhiteStandartTextColor">
            <label class="active" for="Email">Email</label>
            <span class="helper-text" data-error="Ошибка!" data-success=""></span>
        </div>

    <div class="column">
        <p class="StatusOfRegistrationTrue"> Hello! </p>
            <p class="StatusOfRegistrationTrue">
                <i  class="large material-icons">check_circle</i>
            </p>
    </div>
            <button id="RegBtn" class="waves-effect waves-light btn ButtonScaleSignUp" onclick="Status();">Регистрация</button>
    </div>
        
        </form>

    <a class="waves-effect waves-light btn ButtonScaleReg" asp-controller="Home" asp-action="GoToSign">К Авторизации</a>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src ="~/js/AutorizationAndRegistration.js" ></script>
